@model List<efcoreApp.Data.PdfDocument>

@{
    ViewData["Title"] = "List of PDF Documents";
}

<h1 class="mb-4">List of PDF Documents</h1>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">File Name</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pdfDocument in Model)
            {
                <tr>
                    <td>@pdfDocument.Id</td>
                    <td>@pdfDocument.FileName</td>
                    <td>
                        <a href="@Url.Action("ViewPdf", "Pdf", new { id = pdfDocument.Id })" class="btn btn-primary">
                            <i class="bi bi-eye"></i> View PDF
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
