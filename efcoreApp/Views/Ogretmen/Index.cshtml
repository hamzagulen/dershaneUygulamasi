@model IEnumerable<Ogretmen>

<h2>Öğretmen Listesi</h2>
<a href="/Ogretmen/Create" class="btn btn-primary">Öğretmen Ekle</a>
<hr>
<table id="ogretmenTable" class="table table-bordered">
    <thead>
        <tr>
            <th style="width: 150px;">ID</th>
            <th>Ad</th>
            <th>SoyAd</th>
            <th>BaslamaTarihi</th>
            <th style="width: 150px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.OgretmenId)</td>
                <td>@Html.DisplayFor(modelItem => item.Ad)</td>
                <td>@Html.DisplayFor(modelItem => item.SoyAd)</td>
                <td>@Html.DisplayFor(modelItem => item.BaslamaTarihi)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.OgretmenId" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.OgretmenId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    
    <script>
        $(document).ready(function () {
            $('#ogretmenTable').DataTable();
        });
    </script>
}
